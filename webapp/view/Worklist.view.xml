<mvc:View controllerName="zjblesson.Worklist.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic"	
xmlns:smartTable="sap.ui.comp.smarttable" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" >
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false" class="sapUiNoContentPadding">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="zjblessons_base_Materials" persistencyKey="pk_MaterialsSFB" liveMode="false"></smartFilterBar:SmartFilterBar>
		</semantic:headerContent>
		<semantic:content>
			<smartTable:SmartTable id="idSmartTableMaterials" entitySet="zjblessons_base_Materials" smartFilterID="smartFilterBar" useExportToExcel="true"
			tableType="ResponsiveTable" useVariantManagment="true" placeToolarInTable="true" useTablePersonalisation="true" header="Materials" showRowCount="true"
			persistencyKey="pk_MaterialsSF" enableAutoBinding="true" showFullScreenButton="true"  ignoreFromPersonalisation="Language, MaterialID, Version, IntegrationID">
				<Table id="table" mode="Delete" width="auto" noDataText="{worklistView>tablenoDataText}"
				busyIndicatorDelay="{worklistView>tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished" delete="onPressDelete">
					<items>
						<ColumnListItem type="Navigation" press="onPress"></ColumnListItem>
					</items>
				</Table>
			</smartTable:SmartTable>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>
	</semantic:SemanticPage>
</mvc:View>